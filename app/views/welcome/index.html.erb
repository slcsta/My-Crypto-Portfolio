<% if logged_in %>
    <h3>Welcome, <%= current_user.username %>!</h3>
<% end %>

<%= image_tag "Learn_Illustration_What_is_a_Crypto_Wallet.png", width: 300, class: 'd-block mx-auto' %>

<div class="text-center pt-1 mb-5 pb-1">
        <% if !logged_in %>
