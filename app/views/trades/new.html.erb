<h1>Trade <%= @trade.crypto.name %> 
- $<%= @trade.crypto.value %> each</h1>

<%= form_for(@trade) do |f| %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <br>
    <br>
    <%= f.label :quantity %>
    <%= f.number_field :amount %>
    <br>
    <br>
    <%= f.label :price %>
    <%= current_crypto.value  %>
    <br>
    <br>
    <%= f.hidden_field :crypto_id %>
    <%= f.submit %>
<% end %>

