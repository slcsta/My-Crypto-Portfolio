<%= render partial: "layouts/errors", locals:{object: @trade} %>

<h1>Trade <%= @trade.crypto.name %> 
- $<%= @trade.crypto.price %> each</h1>

<%= form_for([@crypto, @trade]) do |f| %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <br>
    <br>
    <%= f.label :quantity %>
    <%= f.number_field :quantity %>
    <br>
    <br>
    <%= f.hidden_field :created_at, value: @trade.created_at %>
    <br>
    <br>
    <%= f.hidden_field :crypto_id, value: @crypto.id %>
    <%= f.submit %>
<% end %>

