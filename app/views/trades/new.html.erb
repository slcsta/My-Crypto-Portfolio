<h1>Trade <%= @trade.crypto.name %> 
- $<%= @trade.crypto.value %> each</h1>

<%= form_for([@crypto, @trade]) do |f| %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <br>
    <br>
    <%= f.label :amount %>
    <%= f.number_field :amount %>
    <br>
    <br>
    <%= f.hidden_field :crypto_id, value: @crypto.id %>
    <%= f.submit %>
<% end %>

