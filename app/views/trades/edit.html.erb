<h1>Edit Trade</h1>
<h3>Bought <%= @trade.crypto.name %> 
at $<%= @trade.crypto.price %> each</h1>

<%= form_for([@crypto, @trade]) do |f| %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <br>
    <br>
    <%= f.label :quantity %>
    <%= f.number_field :quantity %>
    <br>
    <br>
    <%= f.hidden_field :created_at, value: @trade.created_at %>
    
    <%= f.submit %>
<% end %>