<h1>Signup form</h1>

<%= render partial: "layouts/error", locals: { object: @user } %>

<%= form_for(@user) do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <br>
    <br>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <br>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <br>
    Password Confirmation: <%= f.password_field :password_confirmation %>
    <br>
    <br>
    <%= f.submit "Create Account" %>
<% end %>


