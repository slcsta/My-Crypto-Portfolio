<div class="container">
    <div class="page-header">
        <h1>Crypto Market</h1>
        <h4><span class="label label-primary">Market Snapshot</span></h4>
    </div>
</div>

<div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Symbol</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody> 
        <% @markets.each do |market| %>
            <% market.cryptos.each do |crypto| %>
                <tr><th><%= link_to crypto.name, crypto_path(crypto) %></th>
                <td><%= crypto.symbol %></td>
                <td><%= crypto.price %></td>
            <% end %></tr>
        <% end %>
        </tbody>
    </table>
</div>    
